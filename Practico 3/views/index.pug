    script.
      function diasEnUnMes(mes, año) {
        return new Date(año, mes, 0).getDate();
      }
      window.onload = function(){
        var fecha = new Date();
        var mes = fecha.getMonth()+1;
        var dia = fecha.getDate();
        var diaAdelante = fecha.getDate()+7;
        var mesAdelante = fecha.getMonth()+1;
        var ano = fecha.getFullYear();
        if(dia<10)
          dia='0'+dia;
        if(mes<10)
          mes='0'+mes;
        if(diaAdelante<10)
          diaAdelante ='0'+diaAdelante;
        if(diaAdelante > diasEnUnMes(mes, ano)){
          let n = diaAdelante - diasEnUnMes(mes, ano);
          diaAdelante = '0'+n;
          mesAdelante += 1;
        }
        document.getElementById('fechaC').value=ano+"-"+mes+"-"+dia;
        document.getElementById('fechaL').value=ano+"-"+mesAdelante+"-"+diaAdelante;
      }